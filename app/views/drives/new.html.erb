<% if @form.errors.any? %>
  <%= render 'widgets/errors', object: @form %>
<% end %>

<div id='create-drive'>
  <div class="card">
    <div class="card-content">
      <span class="card-title">乗車記録</span>
      <%= form_for @form, url: car_drives_path do |f| %>
        <div class='row'>
          <div class="input-field col s12">
            <%= f.label :start_meter, '乗車時のメーター' %>
            <%= f.number_field :start_meter %>
          </div>
        </div>
        <div class='row'>
          <div class='input-field col s6'>
            <%= f.label '終了予定日' %>
            <%= f.date_field :end_at_date, class: 'datepicker' %>
          </div>
          <div class="input-field col s6">
            <%= f.label '終了予定時刻' %>
            <%= f.number_field :end_at_hour, in: 0..23 %>
          </div>
        </div>
        <%= f.submit "開始", class: "actions btn" %>
      <% end %>
    </div>
  </div>
</div>

<div id='bookings'>
  <%= render 'widgets/bookings', object: @bookings_in_effect %>
</div>