<% if @form.errors.any? %>
  <div id="error_explanation">
    <h3><%= @form.errors.count %>件のエラーがあります。</h3>
 
    <ul>
    <% @form.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="card">
  <div class="card-content">
    <span class="card-title">乗車記録</span>
    <%= form_for @form, url: car_drive_path(id: @form.drive.id, car_id: @form.drive.car_id), :method => :put, html: { class: 'col s12' } do |f| %>
      <div class="input-field col s12">
        乗車時のメーター： <%= @form.drive.start_meter %><br />
      </div>
      <div class="input-field col s12">
        <%= f.label :end_meter, '降車時のメーター' %>
        <%= f.number_field :end_meter %>
      </div>
      <%= f.submit "終了", class: "actions btn" %>
    <% end %>
  </div>
</div>