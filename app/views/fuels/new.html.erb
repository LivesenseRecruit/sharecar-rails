<% if @fuel.errors.any? %>
  <%= render 'widgets/errors', object: @fuel %>
<% end %>

<div id='create-fuel'>
  <div class="card">
    <div class="card-content">
      <span class="card-title">給油</span>
      <%= form_for @fuel, url: car_fuels_path do |f| %>
        <div class='row'>
          <div class="input-field col s12">
            <%= f.label :amount, 'ガソリン代' %>
            <%= f.number_field :amount %>
          </div>
        </div>
        <%= f.submit "記録", class: "actions btn" %>
      <% end %>
    </div>
  </div>
</div>

<% @fuels.each do |fuel| %>
  <div class='card fuel'>
    <div class='card-content'>
      <p>
        <span class='card-title'><%= fuel.user.name %></span>
        <p><%= simple_datetime fuel.created_at %></p>
        <p><%= fuel.amount %>円</p>
      </p>
    </div>
    <% if fuel.user.id == current_user.id %>
    <div class='card-action right-align'>
      <%= link_to car_fuel_path(id: fuel),
                  { method: :delete,
                    data: { confirm: "#{fuel.amount}円の給油履歴を取り消しますか？" },
                    class: 'btn-floating btn-large waves-effect waves-light red' } do %>
        <i class="material-icons">delete</i>
      <% end %>
    </div>
    <% end %>
  </div>
<% end %>
