<% if @form.errors.any? %>
<div class="row">
  <% @form.errors.messages.each do |key, msgs| %>
    <% msgs.each do |msg| %>
    <div class="col s12">
      <div class="card-panel red">
        <span class="white-text"><%= msg %></span>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
<% end %>

<div id='create-booking'>
  <div class="card">
    <div class="card-content">
      <span class="card-title">予約登録</span>
      <%= form_for @form, url: car_bookings_path, :method => :post do |f| %>
        <div class='row'>
          <div class='input-field col s6 offset-s1'>
            <%= f.label '日付' %>
            <%= f.date_field :start_at_date, class: 'datepicker' %>
          </div>
          <div class="input-field col s3">
            <%= f.label '時刻' %>
            <%= f.number_field :start_at_hour, in: 0..23 %>
          </div>
        </div>
        <div class='row' style='margin-bottom: 0px; height: 30px;'>
          <div class='col s2 offset-s5'>
            <i class="material-icons">arrow_downward</i>
          </div>
        </div>
        <div class='row'>
          <div class='input-field col s6 offset-s1'>
            <%= f.label '日付' %>
            <%= f.date_field :end_at_date, class: 'datepicker' %>
          </div>
          <div class="input-field col s3">
            <%= f.label '時刻' %>
            <%= f.number_field :end_at_hour, in: 0..23 %>
          </div>
        </div>
        <%= f.submit "予約", class: "actions btn" %>
      <% end %>
    </div>
  </div>
</div>

<div id='bookings'>
<%= render 'widgets/bookings', object: @bookings_in_effect %>
</div>