<div class="row">
<% @cars.each do |car| %>
  <div class="col s12">
    <div class="card">
      <div class="card-image">
        <img src="https://source.unsplash.com/category/objects/400x200">
        <% if car.using?(current_user.id) %>
        <a href="<%= edit_car_drive_path car_id: car.id, id: car.using_drive(current_user.id).id %>" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">done</i></a>
        <% else %>
        <a href="<%= new_car_drive_path car.id %>" class="btn-floating halfway-fab waves-effect waves-light green"><i class="material-icons">directions_car</i></a>
        <% end %>
      </div>
      <div class="card-content">
        <p>
          <%= car.name %>
          <% if car.occupied? %>
            <span class="badge red white-text"><%= car.current_driver.name %>が使用中</span>
          <% else %>
            <span class="badge green white-text">使用可</span>
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>
</div>
