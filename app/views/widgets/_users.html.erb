<% object.each do |user| %>
<div class='card horizontal user'>
  <div class="card-content">
    <i class="material-icons medium <% if user.activation_state == 'pending' %>red-text<% else %>green-text<% end %>">account_circle</i>
  </div>
  <div class='card-content'>
    <p>
      <span class='card-title'><%= user.name || 'Not registered' %></span>
      <%= user.email %> <br />
      <%= user.phone_number %>
    </p>
  </div>
</div>
<% end %>